<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Cpf"
            android:id="@+id/txt_cpflocacao"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="9sp" />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Data Inicio"
            android:id="@+id/txt_locacaodatainicio"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="9sp" />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Data Fim"
            android:id="@+id/txt_locacaodatafim"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="9sp" />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Placa "
            android:id="@+id/txt_locacaoplaca"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="9sp" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:id="@+id/txt_locacaovalor"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>